{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "lib": ["es2020", "es7", "es6", "dom"],
    "baseUrl": ".",
    "strict": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/types"
  },
  "include": ["./src"]
}
